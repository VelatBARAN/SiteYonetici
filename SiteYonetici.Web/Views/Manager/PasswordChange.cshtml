@using SiteYonetici.Web.Models
@model SiteYonetici.Entities.ValueObjects.ResetPasswordModel

@{
    ViewBag.Title = "Şifre Değiştir";
}

<div class="row">
    <div class="col-md-12">
        <p class="display-4 border-bottom">
            @ViewBag.Title
        </p>
    </div>
</div>

<div class="form-group row">
    <div class="col-md-12">
        @Html.ValidationSummary(false)
        @{
            if (ViewBag.ChangePassword != null)
            {
                <h4 class="form-control alert-success fa fa-check mr-2"> @ViewBag.ChangePassword</h4>
            }
        }
    </div>
</div>

<div class="row mt-3 ml-5">
    <div class="col-md-8 col-offset-2">
        @using (Html.BeginForm("PasswordChange", "Manager", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
          
            <div class="form-group row">
                <div class="col-md-12">
                    @Html.ValidationSummary(false)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Eposta, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                <input type="email" value="@CurrentSession.Manager.Eposta" name="Eposta" class="form-control col-md-10" readonly />
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-md-10", type = "password" } })
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.RePassword, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control col-md-10", type = "password" } })
            </div>

            <div class="form-group row">
                <div class="col-md-12 text-right" style="left">
                    @BoostrapHelper.Button("success", "Değiştir", string.Empty, "submit", "save", "Değiştir")
                    @BoostrapHelper.LinkButton("/Manager/ShowProfile", "secondary", string.Empty, "İptal", "arrow-left", "İptal")
                </div>
            </div>
        }
    </div>
</div>

