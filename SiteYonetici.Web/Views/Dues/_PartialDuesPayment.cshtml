@model SiteYonetici.Entities.DuesPayment

<div class="row">
    <div class="col-md-12">
        <input type="hidden" id="duesPaymentId" value="@Model.Id" />
        <div class="form-group row">
            <div class="col-md-5">
                <strong for="safeType" class="control-label-md-2 ml-2">Kasa</strong>
            </div>
            <div class="col-md-7">
                @Html.DropDownList("SafeId", (List<SelectListItem>)ViewBag.SafeType, "seçiniz...", new { @class = "form-control col-10", id = "SafeId" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-5">
                <strong for="totalDuesAmount" class="control-label ml-2">Toplam Aidat Tutarı</strong>
            </div>
            <div class="col-md-7">
                <input type="text" class="form-control" id="totalDuesAmount" value="@Model.TotalDuesAmount" readonly>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-5">
                <strong for="totalDuesAmount" class="control-label ml-2">Kalan Aidat Tutarı</strong>
            </div>
            <div class="col-md-7">
                <input type="text" class="form-control" id="totalDuesAmount" value="@Model.RemainingAmount" readonly>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-5">
                <strong for="PaymentedDuesAmount" class="control-label ml-2">Ödenecek Aidat Tutar</strong>
            </div>
            <div class="col-md-7">
                <input type="number" class="form-control" id="paymentedDuesAmount" name="PaidPayment">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-5">
                <strong for="paymentDate" class="control-label ml-2">Ödeme Tarihi</strong>
            </div>
            <div class="col-md-7">
                <input type="date" class="form-control" id="paymentDate" name="PaymentDate">
            </div>
        </div>
    </div>
</div>
